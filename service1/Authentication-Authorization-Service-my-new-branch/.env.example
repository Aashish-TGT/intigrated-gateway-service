# Server
NODE_ENV=development
PORT=8080
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Mongo
MONGO_URI=mongodb://mongo:27017/authdb

# JWT (local mode)
JWT_SECRET=replace_with_strong_secret
JWT_ISSUER=auth-service
JWT_AUDIENCE=auth-clients
JWT_ALG=HS256
ACCESS_TTL_SEC=900
REFRESH_TTL_SEC=604800

# Azure AD B2C (set ENABLE_AZURE_B2C=true to enable)
ENABLE_AZURE_B2C=false
AZURE_B2C_TENANT=yourtenant.b2clogin.com
AZURE_B2C_POLICY=B2C_1_signupsignin
AZURE_B2C_CLIENT_ID=YOUR_APP_CLIENT_ID
AZURE_B2C_JWKS_URI=
